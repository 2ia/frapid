<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="/Scripts/semantic-ui/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/WebsiteBuilder/Content/site.css" />
    <script src="/Scripts/jquery-2.1.4.min.js"></script>
    <script src="/Scripts/semantic-ui/semantic.min.js"></script>
</head>
<body>
    <div class="pusher">
        @{
            string header = ViewBag.LayoutPath + "header.cshtml";
            string footer = ViewBag.LayoutPath + "footer.cshtml";
        }

        @Html.Partial(header)
        @RenderBody()
        @Html.Partial(footer)
    </div>
</body>
</html>