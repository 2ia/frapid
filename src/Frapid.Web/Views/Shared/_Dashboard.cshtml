@using Frapid.i18n
<!DOCTYPE html>
<html data-ng-app="FrapidApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="Frapid Framework" />
    <title>@ViewBag.Title</title>
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--[if IE]>
        <style>
            .grid3 td { padding-left: 1px !important; }
        </style>
    <![endif]-->
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web' rel='stylesheet' type='text/css' />
    @RenderSection("Scripts", false)
    @RenderSection("Styles", false)

    @if (CultureManager.IsRtl())
    {
        <link rel="Stylesheet" href="@Href("~/bundles/master-page-rtl.css")" />
    }
    else
    {
        <link rel="Stylesheet" href="@Href("~/bundles/master-page.css")" />
    }
    <style>
        @@media only screen and (min-width: 768px) {
            .cellphone.only {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <script src="/backend/resources.js?Culture=<%= CultureManager.GetCurrent().TwoLetterISOLanguageName %>"></script>
    <script src="/bundles/master-page.js"></script>
    <script src="/Scripts/frapid/master-page/menu.js"></script>

<div class="ui segment">
    <div class="container">

    </div>
</div>

<div class="ui stackable grid">
        <div class="sixteen wide brand column" id="Top">
            <div class="ui stackable grid">
                <div class="four wide column">
                    <a href="/" id="Logo">
                        <img src="/backend/logo" />
                    </a>
                </div>
                <div class="twelve wide column">
                    <div id="RightMenu">
                        <div class="ui inverted theme attached stackable menu">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="sixteen wide column computer only" id="MainMenu">
            <div id="top-menu" class="ui attached stackable menu">
                <a class="item" onclick="toggleSidebar(this);">
                    <i class="options icon"></i>
                </a>
                <a class='initially hidden item' id="reset-menu" href="javascript:void(0);">
                    <i class='red remove icon'></i>
                </a>
            </div>
        </div>
        <div class="three wide column computer only sidebar" id="Sidebar">
            <div id="search" style="width: 100%;">
                <div class="ui fluid icon input" style="width: 100%;">
                    <input type="text" id="SearchInput" autocomplete="off">
                    <i class="search link icon"></i>
                </div>
            </div>
            <div id="tree" style='display: none;'>
                <ul id='treeData'></ul>
            </div>
        </div>
        <div class="thirteen wide column" id="Content">
            <div id="MainContent">
                <div class="ui mobile only grid">
                    <div id="PhoneMenu" style="max-width: 500px; padding-bottom: 24px;">
                        <div class="ui grid">
                            <div class="ui four column doubling row" id="menu-cols">
                            </div>
                        </div>
                    </div>
                </div>
                @RenderBody()
                <script src="/Scripts/frapid/utitlities/localizable.js"></script>
                <script src="/Scripts/frapid/utitlities/validator.js"></script>
            </div>
        </div>
        <div class="sixteen wide theme column" id="Footer">
            <div class="ui stackable page grid">
                <div class="four wide column">
                    <a href="http://mixerp.org" target="_blank">
                        <img class="ui mini image" src="/Static/images/frapid-logo.png" />
                    </a>
                </div>
                <div class="twelve wide column">
                    <div class="footer-text">
                        Frapid is a rapid application development framework.
                    </div>
                </div>
            </div>

        </div>
    </div>
    @RenderSection("BottomScripts", false)

    <script src="/signalr/hubs"></script>
</body>

</html>
