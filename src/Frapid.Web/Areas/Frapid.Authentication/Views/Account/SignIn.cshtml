@using Frapid.i18n
@using Frapid.i18n.Resources
@model dynamic

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="Frapid Framework"/>
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet" type="text/css"/>
    <title>
        @Titles.SignIn
    </title>
    @if (CultureManager.IsRtl())
    {
        <link rel="Stylesheet" href="@Href("~/bundles/master-page-rtl.css")"/>
    }
    else
    {
        <link rel="Stylesheet" href="@Href("~/bundles/master-page.css")"/>
    }
</head>
<body id="SignInBody">
<div id="signin-form">
    <div class="ui attached stackable padded segment" id="SignInSegment">
        <a href="/" class="ui large grey header">
            <img class="ui mini image" src="~/backend/logo">
            Sign In
        </a>
        <div class="ui divider"></div>
        <div class="ui very relaxed stackable grid">
            <div class="twelve wide column">
                <div class="ui stackable form">
                    <div class="field">
                        <label for="UsernameInputText">Email Address</label>
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input name="UsernameInputText"
                                   id="UsernameInputText" placeholder="User Id"
                                   autocapitalize="off" autocorrect="off" type="text">
                        </div>
                    </div>
                    <div class="field">
                        <label for="PasswordInputPassword">Password</label>
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input name="PasswordInputPassword" id="PasswordInputPassword" placeholder="Password" type="password">
                        </div>
                    </div>
                    <div class="field">
                        <label for="LanguageSelect">Select Language</label>
                        <select name="LanguageSelect" class="ui search dropdown" id="LanguageSelect"></select>
                    </div>
                    <div class="field">
                        <div class="ui toggle checkbox">
                            <input class="hidden" tabindex="0" name="RememberInputCheckBox" id="RememberInputCheckBox" type="checkbox"><label>Remember Me</label>
                        </div>
                    </div>

                    <div class="ui buttons">
                        <button id="SignInButton" title="CRTL + RETURN" class="ui purple button" type="button">
                            Sign In
                        </button>
                        <a class="ui button" href="/">Cancel</a>
                    </div>

                    <div class="exception field"></div>

                    <div class="ui breadcrumb">
                        <a class="section">Create an Account</a>
                        <div class="divider"> / </div>
                        <a class="section">Reset My Password</a>
                    </div>
                </div>
            </div>
            <div class="ui computer only vertical divider">
                @Titles.Or
            </div>
            <div class="four wide column">
                <div class="ui header">Sign Up With</div>

                <div class="ui vertical icon menu">
                    <a class="active item" id="FacebookButton">
                        <i class="facebook icon"></i>Facebook
                    </a>
                    <a class="item">
                        <i class="google plus icon"></i> Google
                    </a>
                    <a class="item">
                        <i class="openid icon"></i> Open Id
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="/bundles/master-page.js"></script>
<script>
    $(".dropdown").dropdown();
</script>
<div id="fb-root"></div>
<script>
    $("#SignInButton").click(function() {
    });

    function facebookSignIn(userId, token) {
        function request() {
            var url = "/account/facebook/sign-in";
            var loginDetails = {
                FacebookUserId: userId,
                Token: token
            };

            var data = JSON.stringify(loginDetails);

            return window.getAjaxRequest(url, "POST", data);
        };

        var ajax = request();

        ajax.success(function(response) {
            if (response.Status) {
                window.location = "/dashboard";
            } else {
                registerWithFacebook(userId, token);
            };
        });

        ajax.fail(function() {
            $("#SignInSegment").removeClass("loading");
        });
    };

    function registerWithFacebook(userId, token) {
        var fields = ["name", "about", "birthday", "email", "first_name", "middle_name", "last_name", "gender", "languages", "locale", "link,location", "website", "work", "timezone"];

        function request() {
            var url = "https://graph.facebook.com/me";
            url += "?fields=" + fields.join(",");
            url += "&access_token=" + token;

            return window.getAjaxRequest(url);
        };

        var ajax = request();
        ajax.success(function(response) {
            var qs = [];

            for (var i = 0; i < fields.length; i++) {
                if (response.hasOwnProperty(fields[i])) {
                    qs.push(fields[i] + "=" + encodeURIComponent(response[fields[i]]));
                };
            };

            window.location = "/account/sign-up?module=facebook&" + qs.join("&");
        });
    };

    window.fbAsyncInit = function() {
        window.FB.init({
            appId: '1511435025820204', // App ID
            status: true, // check login status
            cookie: true, // enable cookies to allow the server to access the session
            xfbml: true // parse XFBML
        });

    };

    $("#FacebookButton").click(function() {
        $("#SignInSegment").addClass("loading");

        window.FB.login(function(response) {
            if (response.authResponse) {
                var fbUserId = response.authResponse.userID;
                var fbToken = response.authResponse.accessToken;
                facebookSignIn(fbUserId, fbToken);
            } else {
                alert("Please authorize in order to complete registration.");
            }
        },
        {
            scope: 'email'
        });
    });

    // Load the SDK Asynchronously
    (function(d) {
        var id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
        if (d.getElementById(id)) {
            return;
        }
        var js = d.createElement('script');
        js.id = id;
        js.async = true;
        js.src = "//connect.facebook.net/en_US/all.js";
        ref.parentNode.insertBefore(js, ref);
    }(document));
</script>
</body>

</html>