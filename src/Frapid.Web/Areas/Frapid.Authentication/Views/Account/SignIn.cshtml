@using Frapid.i18n
@using Frapid.i18n.Resources
@model Frapid.Authentication.ViewModels.SignIn
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="Frapid Framework" />
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet" type="text/css" />
    <title>
        @Titles.SignIn
    </title>
    @if (CultureManager.IsRtl())
    {
        <link rel="Stylesheet" href="@Href("~/bundles/master-page-rtl.css")" />
    }
    else
    {
        <link rel="Stylesheet" href="@Href("~/bundles/master-page.css")" />
    }
    <meta name="google-signin-scope" content="@Model.GoogleSignInScope">
    <meta name="google-signin-client_id" content="@Model.GoogleSigninClientId">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
</head>
<body id="SignInBody">
    <div id="signin-form">
        <div class="ui attached stackable padded segment" id="SignInSegment">
            <a href="/" class="ui large grey header">
                <img class="ui mini image" src="~/backend/logo">
                Sign In
            </a>
            <div class="ui divider"></div>
            <div class="ui very relaxed stackable grid">
                <div class="eleven wide column">
                    <div class="ui stackable form">
                        <div class="field">
                            <label for="UsernameInputText">Email Address</label>
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input name="UsernameInputText"
                                       id="UsernameInputText" placeholder="User Id"
                                       autocapitalize="off" autocorrect="off" type="text">
                            </div>
                        </div>
                        <div class="field">
                            <label for="PasswordInputPassword">Password</label>
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input name="PasswordInputPassword" id="PasswordInputPassword" placeholder="Password" type="password">
                            </div>
                        </div>
                        <div class="field">
                            <label for="LanguageSelect">Select Language</label>
                            <select name="LanguageSelect" class="ui search dropdown" id="LanguageSelect"></select>
                        </div>
                        <div class="field">
                            <div class="ui toggle checkbox">
                                <input class="hidden" tabindex="0" name="RememberInputCheckBox" id="RememberInputCheckBox" type="checkbox"><label>Remember Me</label>
                            </div>
                        </div>

                        <div class="ui buttons">
                            <button id="SignInButton" title="CRTL + RETURN" class="ui purple button" type="button">
                                Sign In
                            </button>
                            <a class="ui button" href="/">Cancel</a>
                        </div>

                        <div class="exception field"></div>

                        <div class="ui breadcrumb">
                            <a class="section" href="/account/sign-up">Create an Account</a>
                            <div class="divider"> / </div>
                            <a class="section">Reset My Password</a>
                        </div>
                    </div>
                </div>
                <div class="ui computer only vertical divider">
                    @Titles.Or
                </div>
                <div class="five wide column">
                    <div class="ui header">Sign In With</div>

                    <div class="g-signin2" data-onsuccess="onSignIn" data-theme="dark"
                         data-width="134px" data-height="32"></div>
                    <div class="tpad8">
                    </div>

                    <div class="ui facebook fluid button" id="FacebookButton" style="width: 134px;">
                        <i class="facebook icon"></i>Facebook
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="/bundles/master-page.js"></script>
    <script>
        var fbAppId = '@Model.FacebookAppId';
        var fbScope = '@Model.FacebookScope';
        $(".dropdown").dropdown();
    </script>
    <div id="fb-root"></div>
    <script src="/Areas/Frapid.Authentication/Scripts/Account/SignIn/facebook.js"></script>
    <script src="/Areas/Frapid.Authentication/Scripts/Account/SignIn/google.js"></script>
</body>
</html>